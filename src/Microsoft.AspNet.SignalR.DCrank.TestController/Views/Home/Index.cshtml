
@{
    ViewBag.UseScripts = false;//Ensures that the js variables that I initialize are not reset
    ViewBag.Title = "Dashboard";
}

<h2>Hud</h2>

<div class="jumbotron">
    <ul id="agentOutput"></ul>
</div>

<button id=refresh>Refresh</button>

<!--Script references. -->
<!--Reference the jQuery library. -->
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.0.2.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>


<script>
    var message = $.connection.controllerHub;
    message.client.broadcastMessage = function (message) {
        $('#agentOutput').prepend('<li> ' + message + '</li>');
    };
    $.connection.hub.start().done(function () {
        $('#refresh').click(function () {
            message.server.ping(5);
        });
    });
</script>

