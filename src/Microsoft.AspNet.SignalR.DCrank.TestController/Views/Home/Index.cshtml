@{
    ViewBag.Title = "Dashboard";
}

<h2>Hud</h2>

<div class="jumbotron">
    <ul id="agentOutput"></ul>
</div>

<button id="ping">Refresh</button>

@section scripts
{
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <script>
        var controller = $.connection.controllerHub;
        controller.client.agentConnected = function (id) {
            $('#agentOutput').prepend('<li> ' + id + 'has connected' + '</li>');
        };
        controller.client.pongResponse = function (id, value) {
            $('#agentOutput').prepend('<li> ' + id + 'has responded to the ping with' + value + '</li>');
        };
        $.connection.hub.qs = { UI: 1 };
        $.connection.hub.start().done(function () {
            $('#ping').click(function () {
                controller.server.ping(5);
            });
        });
    </script>
}